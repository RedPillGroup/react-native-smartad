<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartadserver.android.sassample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main_short">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BannerActivity"
            android:label="@string/title_activity_banner"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".InAppBiddingBannerActivity"
            android:label="@string/title_activity_inapp_bidding_banner"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".InAppBiddingInterstitialActivity"
            android:label="@string/title_activity_inapp_bidding_interstitial"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".InterstitialActivity"
            android:label="@string/title_activity_interstitial"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".RecyclerActivity"
            android:label="@string/title_activity_recycler"
            android:configChanges="screenSize|orientation" />
        <activity android:name=".CoordinatorLayoutActivity"
            android:label="@string/title_activity_coordinator_layout"
            android:theme="@style/AppThemeNoActionBar"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".NativeActivity"
            android:label="@string/title_activity_native"
            android:configChanges="screenSize|orientation"/>
        <activity
            android:name=".RewardedVideoActivity"
            android:label="@string/title_activity_rewarded_video"
            android:configChanges="screenSize|orientation" />
    </application>

</manifest>